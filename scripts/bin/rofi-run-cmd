# alacritty -e btop
if [ ! -z $CMD ]; then
    if [ $# -eq 1 ]; then
        alacritty -o "window.opacity=$1" -e zsh -c \\"zsh -ic "$CMD" \\" &
        # $CMD
    else
        alacritty -e zsh -c \\"zsh -ic "$CMD" \\" &
        # $CMD
    fi
fi

