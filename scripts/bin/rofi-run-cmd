#!/bin/bash

CMD=$(rofi -dmenu -theme ~/.config/rofi/dmenu_cc.rasi -lines 0 -no-fixed-num-lines -p 'Command')
# CMD=$(dmenu -p 'Command:' <&-)

# alacritty -e btop
