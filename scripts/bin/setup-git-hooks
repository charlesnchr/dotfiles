#!/bin/bash
# Set up global git hooks
# Run this once on a new machine to enable global git hooks

HOOKS_DIR="$HOME/dotfiles/dotfiles_private/git/hooks"

if [[ ! -d "$HOOKS_DIR" ]]; then
    echo "Error: Hooks directory not found at $HOOKS_DIR"
    echo "Make sure your dotfiles are cloned to ~/dotfiles"
    echo "and dotfiles_private submodule is initialized"
    exit 1
fi

echo "Setting global git hooks path to: $HOOKS_DIR"
git config --global core.hooksPath "$HOOKS_DIR"

echo ""
echo "âœ“ Global git hooks configured!"
echo ""
echo "Active hooks:"
ls -1 "$HOOKS_DIR" | grep -v "^\\."
echo ""
echo "These hooks will now run for all git repositories."
