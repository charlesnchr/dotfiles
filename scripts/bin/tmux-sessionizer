#!/opt/homebrew/bin/bash

# Load all directories from cache - no find commands!
all_dirs_cache="$HOME/.cache/tmux-sessionizer-all-dirs"
selected_dirs=()

# Build a map of folder names to branches
declare -A folder_to_branch
if [[ -f $all_dirs_cache ]]; then
    while IFS= read -r line; do
        selected_dirs+=("$line")
        # Extract folder name and branch
        folder=$(echo "$line" | awk '{print $1}')
        branch=$(echo "$line" | awk '{print $2}')
        # Only store if it looks like a branch (has brackets)
        if [[ $branch == \[*\] ]]; then
            # Normalize folder name like session names (tr . _)
            normalized=$(echo "$folder" | tr . _)
            folder_to_branch["$normalized"]="$branch"
        fi
    done < "$all_dirs_cache"
fi

# Get a list of running tmux sessions and mark them
tmux_sessions_raw=$(tmux list-sessions -F "#{session_name}" 2>/dev/null)
tmux_sessions=()
while IFS= read -r session; do
    if [[ -n $session ]]; then
        # Check if session matches a repo
        if [[ -n ${folder_to_branch[$session]} ]]; then
            tmux_sessions+=("session: $session  ${folder_to_branch[$session]}")
        else
            tmux_sessions+=("session: $session")
        fi
    fi
done <<< "$tmux_sessions_raw"

# Use the filtered paths array and tmux sessions in fzf
if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(printf "%s\n" "${tmux_sessions[@]}" "${selected_dirs[@]}" | fzf \
        --height=80% \
        --margin=5%,5% \
        --preview 'path=$(echo {} | awk "{print \$NF}"); tmux capture-pane -pt "$path" -S -500 2>/dev/null || /bin/ls -la "$path"' \
        --prompt="projects > " \
        --delimiter='  ' \
        --with-nth=1,2 \
        --ansi \
        --color='fg:white,fg+:black,bg+:yellow,hl:cyan,hl+:blue,gutter:-1' \
        --header='[name]  [branch/type]'
    )
fi

if [[ -z $selected ]]; then
    exit 0
fi

# Check if this is a session selection
if [[ $selected == session:* ]]; then
    # Extract session name (second field)
    selected_name=$(echo "$selected" | awk '{print $2}')
    selected_path=$selected_name
else
    # Extract the actual path (last field)
    selected_path=$(echo "$selected" | awk '{print $NF}')

    # If it's not a directory, treat as session name
    if [[ ! -d $selected_path ]]; then
        selected_path=$selected
    fi

    selected_name=$(basename "$selected_path" | tr . _)
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    if [[ -d $selected_path ]]; then
        tmux new-session -s $selected_name -c $selected_path
    else
        tmux attach-session -t $selected_path
    fi
    exit 0
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
    if [[ -d $selected_path ]]; then
        tmux new-session -ds $selected_name -c $selected_path
        tmux switch-client -t $selected_name
    else
        tmux new-session -ds $selected_name
        tmux switch-client -t $selected_name
    fi
else
    tmux switch-client -t $selected_name
fi
