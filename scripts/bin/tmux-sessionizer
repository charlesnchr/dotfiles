#!/opt/homebrew/bin/bash

# Define the paths to search
content_dirs=(
    ~/1private
    ~/1private/Github
    ~/2work
    ~/2work/gitrepos
    ~/0main/2.Projects
    ~/onedrive
)

# Define the fixed directories to search
fixed_dirs=(
    ~/1private
    ~/2work
    ~/qmk_firmware
    ~/dotfiles
    ~/0main
)

# Search for directories in all directories
selected_dirs=()
for dir in "${fixed_dirs[@]}"; do
    if [[ -d $dir ]]; then
        selected_dirs+=("$(basename "$dir")    $dir")
    fi
done

for dir in "${content_dirs[@]}"; do
    if [[ -d $dir ]]; then
        while IFS= read -r subdir; do
            selected_dirs+=("$(basename "$subdir")    $subdir")
        done < <(find -L "$dir" -mindepth 1 -maxdepth 1 -type d -not -path '\*/.\*')
    fi
done

# Load pre-formatted git branch cache and prepend to selected_dirs
sessionizer_cache="$HOME/.cache/tmux-sessionizer-formatted"
if [[ -f $sessionizer_cache ]]; then
    # Read formatted cache entries and prepend them
    git_dirs=()
    while IFS= read -r line; do
        git_dirs+=("$line")
    done < "$sessionizer_cache"

    # Combine: git repos first (with branches), then other dirs
    selected_dirs=("${git_dirs[@]}" "${selected_dirs[@]}")
fi

# Get a list of running tmux sessions
tmux_sessions=$(tmux list-sessions -F "#{session_name}" 2>/dev/null)

# Use the filtered paths array and tmux sessions in fzf
if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(printf "%s\n" "${tmux_sessions[@]}" "${selected_dirs[@]}" | fzf \
        --height=80% \
        --margin=5%,5% \
        --preview 'path=$(echo {} | awk "{print \$NF}"); tmux capture-pane -pt "$path" -S -500 2>/dev/null || /bin/ls -la "$path"' \
        --prompt="projects > " \
        --delimiter='  ' \
        --with-nth=1,2 \
        --ansi \
        --color='fg:white,fg+:white,hl:cyan,hl+:cyan,gutter:-1' \
        --header='[name]  [branch]'
    )
fi

if [[ -z $selected ]]; then
    exit 0
fi

# Extract the actual path (last field)
selected_path=$(echo "$selected" | awk '{print $NF}')

# If it's just a session name (no path), use it as-is
if [[ ! -d $selected_path ]]; then
    selected_path=$selected
fi

selected_name=$(basename "$selected_path" | tr . _)

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    if [[ -d $selected_path ]]; then
        tmux new-session -s $selected_name -c $selected_path
    else
        tmux attach-session -t $selected_path
    fi
    exit 0
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
    if [[ -d $selected_path ]]; then
        tmux new-session -ds $selected_name -c $selected_path
        tmux switch-client -t $selected_name
    else
        tmux new-session -ds $selected_name
        tmux switch-client -t $selected_name
    fi
else
    tmux switch-client -t $selected_name
fi
