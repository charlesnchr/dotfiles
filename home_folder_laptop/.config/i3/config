    bindsym Shift+3 workspace 12, mode "default"
    bindsym Shift+4 workspace 13, mode "default"
    bindsym Shift+5 workspace 14, mode "default"
    bindsym Shift+6 workspace 15, mode "default"
    bindsym Shift+7 workspace 16, mode "default"
    bindsym Shift+8 workspace 17, mode "default"
    bindsym Shift+9 workspace 18, mode "default"

    bindsym a mode "$Workspace_a"
    bindsym s mode "$Workspace_s"
    bindsym j mode "$Workspace_select"
    bindsym Tab mode "$Workspace_select"

    bindsym f exec i3-msg workspace $(~/bin/i3_get_ws | rofi -dmenu -theme ~/.config/rofi/dmenu_cc.rasi -p "Workspace"), mode "default"
    bindsym semicolon exec i3-msg workspace $(~/bin/i3_get_ws | rofi -dmenu -theme ~/.config/rofi/dmenu_cc.rasi -p "Workspace"), mode "default"
    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

