# Resize window (you can also use the mouse for that)
# bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # Pressing left will shrink the window‚Äôs width.
        # Pressing right will grow the window‚Äôs width.
        # Pressing up will shrink the window‚Äôs height.
        # Pressing down will grow the window‚Äôs height.
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # exit resize mode: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Navigate window (you can also use the mouse for that)
# bindsym $mod+r mode "resize"
mode "navigate" {
        # These bindings trigger as soon as you enter the resize mode
        # Pressing left will shrink the window‚Äôs width.
        # Pressing right will grow the window‚Äôs width.
        # Pressing up will shrink the window‚Äôs height.
        # Pressing down will grow the window‚Äôs height.

        bindsym h focus left, mode "default"
        bindsym j focus down, mode "default"
        bindsym k focus up, mode "default"
        bindsym l focus right, mode "default"
        bindsym y move left, mode "default"
        bindsym u move down, mode "default"
        bindsym i move up, mode "default"
        bindsym o move right, mode "default"
        bindsym n resize shrink width 5 px or 5 ppt
        bindsym m resize grow height 5 px or 5 ppt
        bindsym comma resize shrink height 5 px or 5 ppt
        bindsym period resize grow width 5 px or 5 ppt
        bindsym b exec --no-startup-id ~/anaconda3/bin/i3_balance_workspace, mode "default"

        # exit resize mode: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

