# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# set default desktop layout (default is tiling)
# workspace_layout tabbed <stacking|tabbed>

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 2
default_floating_border normal

# Hide borders
hide_edge_borders none

# change borders
bindsym $mod+u border none
bindsym Shift+$mod+u border pixel 2
bindsym Ctrl+$mod+u border normal

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# font xft: NotoSans 11
font pango:NotoSans, xft: NotoColorEmoji 11

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id alacritty
bindsym $mod+Shift+Return exec --no-startup-id firefox
bindsym $mod+e exec --no-startup-id alacritty
# bindsym $mod+r exec --no-startup-id "alacritty -e zsh -c \\"zsh -ic 'ranger'\\""
bindsym $mod+r mode "navigate"
bindsym $mod+y mode "$Apps"

# kill focused window
bindsym $mod+q kill


# bindsym $mod+m exec --no-startup-id ~/.config/rofi/bin/menu_apps
# bindsym $mod+n exec --no-startup-id ~/.config/rofi/bin/menu_network
# bindsym $mod+p exec --no-startup-id ~/.config/rofi/applets/applets/powermenu.sh

# Microphone
# bindsym $mod+m exec --no-startup-id pactl set-source-volume 0 100%
# bindsym $mod+Shift+m exec --no-startup-id pactl set-source-volume 0 0%
bindsym $mod+o exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ false
bindsym $mod+Shift+o exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ true
bindsym $mod+i exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ false
bindsym $mod+Mod1+i exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ 25%
bindsym $mod+Shift+i exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ true

# xmodmap
bindsym $mod+Shift+slash exec --no-startup-id "setxkbmap -option"


# VIM-like marks
bindsym $mod+m exec --no-startup-id i3-input -F 'mark %s' -l 1 -P 'Mark: '
bindsym $mod+apostrophe exec --no-startup-id i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Go to: '
# Use rofi in dmenu mode to GOTO mark
bindsym $mod+Shift+m exec \
    i3-msg -t get_marks | \
    jq -r '.[]' | \
    rofi -dmenu -theme ~/.config/rofi/dmenu_cc.rasi -p 'Go to Mark: ' | \
    xargs -I{} i3-msg '[con_mark="{}"] focus'
# Use rofi in dmenu mode to DELETE mark
bindsym $mod+Shift+Mod1+m exec \
    i3-msg -t get_marks | \
    jq -r '.[]' | \
    rofi -dmenu -theme ~/.config/rofi/dmenu_cc.rasi -p 'Unmark' | \
    xargs -I{} i3-msg '[con_mark="{}"] unmark'
# dmenu version for GOTO
# bindsym $mod+Shift+m exec i3-msg -t get_marks | jq -r '.[]' | dmenu -p 'Focus:' | xargs -I{} i3-msg '[con_mark="{}"] focus'
# Use rofi in dmenu mode to SET mark
bindsym $mod+Mod1+m exec \
    "i3-msg mark $(rofi -dmenu -theme ~/.config/rofi/dmenu_cc.rasi -lines 0 -no-fixed-num-lines -p 'Mark: ')"


