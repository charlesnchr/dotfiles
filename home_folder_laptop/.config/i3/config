# switch to workspace with urgent window automatically
for_window [urgent=latest class="firefox"] focus
bindsym $mod+n [urgent=latest] focus
focus_on_window_activation focus

bindsym $mod+a mode "$Global"
bindsym $mod+Shift+a mode "$Global"
bindsym XF86Tools mode "$Global"
set $Global (0,SPC,m,TAB,qrwasd) üí´ (`,c,q) üìå üìê üìÑ (f,g,j) üöÄ (o,p,l) ‚¨õ ü™ü ‚è© (e,t) üõ∏ (z,x) üì±
mode "$Global" {

    bindsym 0 mode "$mode_system"
    bindsym space mode "$Utility"
    bindsym j mode "$Workspace_select"
    bindsym a mode "$Workspace_a"
    bindsym s mode "$Workspace_s"
    bindsym g exec "i3-msg workspace $(~/bin/i3_get_ws | rofi -dmenu -theme ~/.config/rofi/dmenu_cc.rasi -p 'Workspace')", mode "default"
    bindsym Shift+g exec "~/bin/i3-swap $(~/bin/i3_get_ws | rofi -dmenu -theme ~/.config/rofi/dmenu_cc.rasi -p 'Swap')", mode "default"
    bindsym b mode "$Misc"
    bindsym w mode "$Window"
    bindsym d mode "$Apps"
    bindsym slash mode "$Apps"
    bindsym r mode "resize"
    bindsym q mode "$Snippets"
    bindsym h workspace back_and_forth, mode "default"

    # marks
    bindsym m exec --no-startup-id i3-input -F 'mark %s' -l 1 -P 'Mark: ', mode "default"
    bindsym apostrophe exec --no-startup-id i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Go to: ', mode "default"

    bindsym f exec --no-startup-id rofi -show drun -theme ~/.config/rofi/purple.rasi -run-shell-command 'alacritty -e zsh -ic "{cmd} && read"', mode "default"
    # bindsym grave exec --no-startup-id rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}', mode "default"
    bindsym grave exec --no-startup-id copyq toggle, mode "default"
    bindsym Tab exec --no-startup-id rofi -show window -show-icons, mode "default"
    # bindsym c exec --no-startup-id "rofi -show calc -modi calc -no-show-match -no-sort -calc-command \\"echo '{result}' | xclip -selection clipboard\\" -terse", mode "default"
    bindsym c exec --no-startup-id qalculate-qt, mode "default"
    bindsym shift+F exec --no-startup-id dmenu_recency, mode "default"

    bindsym o exec --no-startup-id xset dpms force off; exec --no-startup-id sleep 0.2 && xset dpms force on, mode "default"

    bindsym p exec --no-startup-id pkill picom; exec --no-startup-id sleep 0.2 && picom -b --experimental-backends, mode "default"
    bindsym l exec --no-startup-id ~/.screenlayout/arandr_tv_60.sh; exec --no-startup-id sleep 0.2 && ~/.screenlayout/arandr_tv.sh, mode "default"
    bindsym F1 exec --no-startup-id ~/.screenlayout/arandr.sh, mode "default"
    bindsym F2 exec --no-startup-id ~/.screenlayout/arandr_tv.sh, mode "default"


    # bindsym e exec --no-startup-id "alacritty -e zsh -c \\"zsh -ic '$(rofi -dmenu -theme ~/.config/rofi/dmenu_cc.rasi -lines 0 -no-fixed-num-lines -p 'Command: ' )'\\"", mode "default"
    # bindsym shift+e exec --no-startup-id "alacritty -o 'window.opacity=0.8' -e zsh -c \\"zsh -ic '$(rofi -dmenu -theme ~/.config/rofi/dmenu_cc.rasi -lines 0 -no-fixed-num-lines -p 'Command: ' )'\\"", mode "default"
    bindsym e exec --no-startup-id ~/bin/rofi-run-cmd, mode "default"
    bindsym Shift+e exec --no-startup-id ~/bin/rofi-run-cmd 0.8, mode "default"
    # bindsym u exec --no-startup-id alacritty -e zsh -c "zsh -ic $(dmenu -p 'Command:' <&-)", mode "default"
    # bindsym u exec --no-startup-id ~/bin/rofi-run-cmd, mode "default"
    # bindsym u exec --no-startup-id i3-input -F 'exec --no-startup-id alacritty -e %s' -P 'Go to: ', mode "default"
    bindsym t exec --no-startup-id "~/bin/rofi-run-cmd && zsh", mode "default"


    # screenshot
    bindsym x exec --no-startup-id maim -s | xclip -selection clipboard -t image/png, mode "default"

    # emoji
    bindsym z exec --no-startup-id rofimoji -f ~/dotfiles/emojis.csv, mode "default"

    # program shortcuts
    bindsym Return exec --no-startup-id alacritty, mode "default"
    bindsym bracketright exec --no-startup-id firefox, mode "default"
    bindsym bracketleft exec --no-startup-id dolphin, mode "default"
    bindsym BackSpace exec --no-startup-id "alacritty -e zsh -c \\"zsh -ic 'ranger'\\"", mode "default"

    # exit system mode: "Enter" or "Escape"
    # bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym XF86Tools mode "default"
    bindsym $mod+a mode "default"
}


# Set shut down, restart and locking features
bindsym $mod+0 mode "$mode_system"
set $mode_system (l)ock, screen (o)ff, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    # bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym l exec --no-startup-id betterlockscreen -l --off 60
    bindsym o exec --no-startup-id sleep 1 && xset dpms force off, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startupqq-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# bindsym $mod+Tab mode "$Apps"
set $Apps (t) terminal, (f) firefox, (d) dolphin, (r) ranger, (s) spotify, (n) notion
mode "$Apps" {
    # bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym t exec --no-startup-id alacritty, mode "default"
    bindsym Return exec --no-startup-id alacritty, mode "default"
    bindsym f exec --no-startup-id firefox, mode "default"
    bindsym r exec --no-startup-id --no-startup-id "alacritty -e zsh -c \\"zsh -ic 'ranger'\\"", mode "default"
    bindsym d exec --no-startup-id dolphin, mode "default"
    bindsym s exec --no-startup-id spotify, mode "default"
    bindsym n exec --no-startup-id notion-app, mode "default"
    bindsym b exec --no-startup-id alacritty -e btop, mode "default"
    bindsym b exec --no-startup-id alacritty -e btop, mode "default"
    bindsym $mod+Shift+F3 exec pcmanfm_pkexec, mode "default"
    # exit system mode: "Enter" or "Escape"
    bindsym Escape mode "default"
}

# bindsym $mod+Tab mode "$Snippets"
set $Snippets (g) @gmail (o) @outlook (w) @wizion (n) CNC (s) sign (p) Python
mode "$Snippets" {
    # bindsym l exec --no-startup-id i3exit lock, mode "default"
    # bindsym g exec --no-startup-id sleep 0.5 && xdotool type charles.n.chr@gmail.com, mode "default"
    # bindsym o exec --no-startup-id sleep 0.5 && xdotool type charles.n.chr@outlook.com, mode "default"
    # bindsym w exec --no-startup-id sleep 0.5 && xdotool type charles@wizion.ai, mode "default"
    # bindsym n exec --no-startup-id sleep 0.5 && xdotool type "Charles Nicklas Christensen", mode "default"


    bindsym g exec --no-startup-id "printf \\"charles.n.chr@gmail.com\\" | xclip -selection clipboard && sleep 0.5 && xdotool key Ctrl+shift+v", mode "default"
    bindsym o exec --no-startup-id "printf \\"charles.n.chr@outlook.com\\" | xclip -selection clipboard && sleep 0.5 && xdotool key Ctrl+shift+v", mode "default"
    bindsym w exec --no-startup-id "printf \\"charles@wizion.ai\\" | xclip -selection clipboard && sleep 0.5 && xdotool key Ctrl+shift+v", mode "default"
    bindsym n exec --no-startup-id "printf \\"Charles Nicklas Christensen\\" | xclip -selection clipboard && sleep 0.5 && xdotool key Ctrl+shift+v", mode "default"

    # bindsym s exec --no-startup-id sleep 0.5 &&  xdotool type "$(printf 'Cheers\n Charles')", mode "default"
    bindsym s exec --no-startup-id "printf \\"Cheers,\nCharles\\" | xclip -selection clipboard && sleep 0.5 && xdotool key Ctrl+shift+v", mode "default"
    # bindsym o exec --no-startup-id sleep 0.1 && xdotool type , mode "default"

    bindsym p exec --no-startup-id "printf \\"import numpy as np\nimport matplotlib.pyplot as plt\nfrom skimage import io,exposure,transform\nimport cv2\nimport os\nimport glob\nimport pandas as pd\\" | xclip -selection clipboard && sleep 0.5 && xdotool key Ctrl+shift+v", mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# bindsym $mod+w mode "$Window"
set $Window (c) horz. , (v) vert. , (q) toggle , (s) stacking, (w) tabbed, (e) toggle split, (space) floating, (p) sticky, (a) parent, (z) child
mode "$Window" {

    bindsym g mode "$Global"

    # split orientation
    bindsym c split h;exec notify-send 'tile horizontally', mode "default"
    bindsym v split v;exec notify-send 'tile vertically', mode "default"
    bindsym q split toggle, mode "default"
    # change container layout (stacked, tabbed, toggle split)
    bindsym s layout stacking, mode "default"
    bindsym w layout tabbed, mode "default"
    bindsym e layout toggle split, mode "default"
    # toggle tiling / floating
    bindsym space floating toggle, mode "default"
    # toggle sticky
    bindsym p sticky toggle, mode "default"
    # focus the parent container
    bindsym a focus parent
    bindsym z focus child

    bindsym h focus left, mode "default"
    bindsym j focus down, mode "default"
    bindsym k focus up, mode "default"
    bindsym l focus right, mode "default"

    bindsym r mode 'resize'

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $Misc (k) k picom, (p) s picom, (d) r dunst, (x) xkill, (h) help, (a) k xcape, (l) r gestures, (1-2) opa.
mode "$Misc" {
    bindsym k exec --no-startup-id pkill picom, mode "default"
    bindsym p exec --no-startup-id picom -b --experimental-backends, mode "default"
    bindsym d --release exec --no-startup-id "killall dunst; exec notify-send 'restart dunst'", mode "default"
    bindsym x --release exec --no-startup-id xkill, mode "default"
    bindsym h exec xdg-open /usr/share/doc/manjaro/i3_help.pdf, mode "default"

    bindsym a exec --no-startup-id killall xcape, mode "default"
    bindsym l exec --no-startup-id libinput-gestures-setup restart, mode "default"

    bindsym 1 exec --no-startup-id ~/bin/toggle_alacritty_opacity, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+space mode "$Utility"
set $Utility (t) terminal, (p) spt, (x) xprofile, (z) morc_menu, (b) bmenu, (s) scn sel., (w) scn win., (a) scn all, (m) pulse, (c) i3-conf, (r) i3-restart, (d) display
mode "$Utility" {
    bindsym t exec alacritty -e $(rofi -dmenu -theme ~/.config/rofi/dmenu_cc.rasi -lines 0 -no-fixed-num-lines -p "Command: "), mode "default"
    bindsym p exec --no-startup-id alacritty -e spt, mode "default"

    # launch categorized menu
    bindsym z exec --no-startup-id morc_menu, mode "default"

    # Start Applications
    bindsym b exec --no-startup-id terminal -e 'bmenu', mode "default"

    # audio
    bindsym m exec --no-startup-id pavucontrol, mode "default"

    # screen shots
    bindsym a exec --no-startup-id maim -u | xclip -selection clipboard -t image/png, mode "default"
    bindsym w exec --no-startup-id maim  -i "$(xdotool getactivewindow)" | xclip -selection clipboard -t image/png, mode "default"
    bindsym s exec --no-startup-id maim -s | xclip -selection clipboard -t image/png, mode "default"
    # shouldn't need this anymore
    # bindsym Shift+s exec --no-startup-id /home/cc/dotfiles/screenshot.sh, mode "default"

    # emoji
    bindsym e exec --no-startup-id rofimoji -f ~/dotfiles/emojis.csv, mode "default"

    # reload the configuration file
    bindsym c reload, mode "default"

    # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
    bindsym r restart, mode "default"

    bindsym x exec --no-startup-id source /home/cc/.xprofile, mode "default"
    bindsym k exec --no-startup-id "killall kmonad; sleep 0.5 && kmonad ~/.config/dell-xps.kbd", mode "default"
    bindsym Shift+x exec --no-startup-id killall xcape, mode "default"

    # to toggle screen off on
    bindsym d exec --no-startup-id sleep 1 && xset dpms force off, mode "default"
    bindsym Shift+d exec --no-startup-id xset dpms force on, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


