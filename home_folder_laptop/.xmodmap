! make escape be caps_lock
! clear Lock
! keycode 9 = Caps_Lock
! add Lock = Caps_Lock

! make caps_lock an additional control
clear Lock
clear Control
clear Mod1
keycode 66 = Control_L
! add Control = Control_L
! add Control = Caps_Lock

keycode 37 = Mode_switch
keysym j = j J Down
keysym l = l L Right
keysym h = h H Left
keysym k = k K Up
keysym u = u U Home
keysym o = o O End


keycode 108 = Control_R
keycode 105 = Alt_R

add Mod1 = Alt_L
add Mod1 = Alt_R
add Control = Control_L
add Control = Control_R

keycode 47 = semicolon colon ae
keycode 48 = apostrophe quotedbl oslash
keycode 34 = bracketleft braceleft aring
keycode 20 = minus underscore emdash

keysym BackSpace = BackSpace BackSpace Delete

keycode 10 = 1 exclam adiaeresis
keycode 11 = 2 at odiaeresis
keycode 12 = 3 numbersign udiaeresis
keycode 13 = 4 dollar ssharp
keycode 14 = 5 percent mu
keycode 15 = 6 ampersand Insert
