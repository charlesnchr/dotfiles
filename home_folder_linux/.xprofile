#!/bin/bash
setxkbmap -layout us -option compose:ralt
xset r rate 200 25

trackpad_id=$(xinput list | grep -m1 'Apple Inc. Magic Trackpad' | awk -F'=' '{print $2}' | awk '{print $1}')
xinput set-prop  $trackpad_id "libinput Accel Speed" 0.35
xinput set-prop  $trackpad_id "libinput Natural Scrolling Enabled" 1

xmodmap ~/.xmodmap

